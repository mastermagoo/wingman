# Wingman Production Environment Configuration
# Copy this file to .env.prd and fill in the actual values
# DO NOT commit .env.prd to git (it contains secrets)

# Flask Environment
FLASK_ENV=production

# API Configuration
API_PORT=5000

# Database Configuration
DB_NAME=wingman_prd
DB_USER=wingman_prd
DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
DB_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Ollama Configuration
OLLAMA_PORT=11434

# Telegram Bot Configuration
BOT_TOKEN=CHANGE_ME_TO_PRODUCTION_BOT_TOKEN
CHAT_ID=CHANGE_ME_TO_PRODUCTION_CHAT_ID

# Phase 4 (HITL) approval keys (recommended: role-separated)
# API expects lists (comma-separated). Bot expects single keys.
WINGMAN_APPROVAL_READ_KEYS=CHANGE_ME_TO_COMMA_SEPARATED_READ_KEYS
WINGMAN_APPROVAL_DECIDE_KEYS=CHANGE_ME_TO_COMMA_SEPARATED_DECIDE_KEYS
WINGMAN_APPROVAL_REQUEST_KEYS=
WINGMAN_APPROVAL_READ_KEY=CHANGE_ME_TO_BOT_READ_KEY
WINGMAN_APPROVAL_DECIDE_KEY=CHANGE_ME_TO_BOT_DECIDE_KEY
# Optional: allow a client/bot to call POST /approvals/request when request keys are enabled
WINGMAN_APPROVAL_REQUEST_KEY=
# Legacy single key (optional; avoid if using role-separated keys)
WINGMAN_APPROVAL_API_KEY=

# Logging
LOG_LEVEL=INFO

# Deployment Environment
DEPLOYMENT_ENV=prd




